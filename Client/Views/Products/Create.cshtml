@model Domain.Entities.Product

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<hr />

<div class="row">
    <div class="col s12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="input-field">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="validate" />
                <span asp-validation-for="Name" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="validate" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label></label>
                <input name="image" type="file"/>
            </div>
            <div class="input-field">
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId"></select>
                <label asp-for="CategoryId"></label>
            </div>
            <div class="input-field">
                <input type="submit" value="Create" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
