@model Domain.Entities.Product

<div class="col s12 m6">
    <div class="card">
        <div class="card-image">
            <img src=@GetImage()>
            <span class="card-title blue lighten-3">@Model.Name</span>
        </div>
        <div class="card-content">

            <p class="flow-text">
                @Model.Description
            </p>
            <h4>@Model.Price</h4>
        </div>
        <div class="card-action">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">View</a>
        </div>
    </div>
</div>

@{
    string GetImage()
    {
        if(Model.PictureUri == null)
        {
            return "/images/products/notFound.png";
        }
        else
        {
            return Model.PictureUri;
        }
    }
}

